    var aaa = 0;
    function PlaceAppend() {
        $("#placemore").empty();
        $.ajax({
            url: "http://localhost:50519/api/PersonalCenter/GetAddressInfos",
            dataType: "json",
            data: { userInfoId: parseInt("@ViewBag.userInfoId")},
            type: "get",
            success: function (d) {
                $(d).each(function () {
                    var sta = this.addressInfoState != 1 ? "<li class='user-addresslist'><span  class='new-option-r'><i class='am-icon-check-circle'></i><input style='background-color: deeppink'  type='button' onclick='modify(" + this.addressInfoId + ")' value='设为默认'/></span>" : "<li class='user-addresslist defaultAddr'><span class='new-option-r'><i class='am-icon-check-circle'></i>默认地址</span>";
                    var str = sta+
                        "<p class='new-tit new-p-re'>" +
                        "<span class='new-txt'>"+this.addressInfoPeople+"</span>" +
                        "<span class='new-txt-rd2'>" + this.addressInfoPhone + "</span>" +
                        "</p>" +
                        "<div class='new-mu_l2a new-p-re'>" +
                        "<p class='new-mu_l2cw'>" +
                        "<span class='title'>地址:</span>" +
                        "<span class='street'>" + this.addressInfoName + "</span>" +
                        "</p>" +
                        "</div>" +
                        "<div class='new-addr-btn'>" +
                        "<a href='/Personal/ModifyPlace?addressInfoId=" + this.addressInfoId + "&posstionInfoPIdOut=" + this.posstionInfoPIdOut + "&posstionInfoCIdOut=" + this.posstionInfoCIdOut + "&posstionInfoDIdOut=" + this.posstionInfoDIdOut + "&addressInfoPeople=" + this.addressInfoPeople + "&addressInfoPhone=" + this.addressInfoPhone + "&addressInfoName=" + this.addressInfoName + "&addressInfoState=" + this.addressInfoState + "'><i class='am-icon-edit'></i>编辑</a>" +
                        "<span class='new-addr-bar'>|</span>" +
                        "<a href='javascript:delClick("+this.addressInfoId+")' ><i class='am-icon-trash'></i>删除</a>" +
                        "</div>" +
                        "</li>";
                    $("#placemore").append(str);
                })
                if (aaa==0) {
                    PosstionPShow();
                    aaa++;
                }
                
            }
        })
    }

    function delClick(addressInfoId) {
        if (confirm("确认要删除吗？")) {
            $.ajax({
                url: "http://localhost:50519/api/PersonalCenter/DeleteAddressInfo",
                dataType: "json",
                data: { addressInfoId: addressInfoId },
                type: "get",
                success: function (d) {
                    if (d > 0) {
                        $("#placemore").empty();
                        PlaceAppend();
                    }
                }
            })
        }
    }

    function modify(AddressInfoId) {
        var uid = "@ViewBag.userInfoId";
        $.ajax({
            url: "http://localhost:50519/api/PersonalCenter/ModifyStateAddressInfo",
            dataType: "json",
            data: { 'userInfoId': uid},
            type: "get",
            success: function (d) {
                if (d > 0) {
                    $.ajax({
                        url: "http://localhost:50519/api/PersonalCenter/ModifyDefaultAddressInfo",
                        dataType: "json",
                        data: { addressInfoId: AddressInfoId},
                        type: "get",
                        success: function (d) {
                            if (d > 0) {
                                $("#placemore").empty();
                                PlaceAppend();
                            }
                        }
                    })
                }
            }
        })
    }

    function add() {
        var obj = {
            addressInfoPeople: $("#user-name").val(),
            addressInfoPhone: $("#user-phone").val(),
            userInfoIdOut: parseInt("@ViewBag.userInfoId"),
            posstionInfoPIdOut: $("#sel_p").val(),
            posstionInfoCIdOut: $("#sel_c").val(),
            posstionInfoDIdOut: $("#sel_d").val(),
            addressInfoName: $("#sel_p option:checked").text() + $("#sel_c option:checked").text() + $("#sel_d option:checked").text() + $("#user-intro").val(),
            addressInfoState: 0
        };
       $.ajax({
           url: "http://localhost:50519/api/PersonalCenter/AddressInfoAdd",
           dataType: "json",
           async: false,
           data: obj,
           type: "post",
           success: function (d) {
               if (d > 0) {
                   empty();
                   alert("添加成功!");
                   PlaceAppend();
               }
           }
       })
    }
