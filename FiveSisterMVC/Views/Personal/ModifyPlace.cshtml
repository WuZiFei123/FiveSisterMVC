<script>
    $(function () {
        $("#user-name").val("@Html.Raw(ViewBag.addressInfoPeople)");
        $("#user-phone").val("@ViewBag.addressInfoPhone");
        $("#user-intro").val("@Html.Raw(ViewBag.addressInfoName)");
        PosstionPShow();
    })
    function PosstionPShow() {
        $.ajax({
            url: "http://localhost:50519/api/PosstionInfo/GetPosstionInfos?pid=1",
            type: "get",
            dataType: "json",
            success: function (d) {
                $("#sel_p").empty();
                $("#sel_p").append("<option value='-1'>==请选择省==</option>");
                $("#sel_c").append("<option value='-1'>==请选择市==</option>");
                $("#sel_d").append("<option value='-1'>==请选择区==</option>");
                console.log(d);
                $(d).each(function () {
                        $("#sel_p").append("<option value='" + this.posstionInfoId + "'>" + this.posstionName + "</option>");
                })
                $("#sel_p").val(parseInt("@ViewBag.posstionInfoPIdOut"));
                PosstionCShow();
            }
        })
    }
    function PosstionCShow() {
        $.ajax({
            url: "http://localhost:50519/api/PosstionInfo/GetPosstionInfos",
            type: "get",
            dataType: "json",
            data: { pid: $("#sel_p").val() },
            success: function (d) {
                $("#sel_c").empty();
                $("#sel_c").append("<option value='-1'>==请选择市==</option>");
                $("#sel_d").empty();
                $("#sel_d").append("<option value='-1'>==请选择区==</option>");
                $(d).each(function () {
                    $("#sel_c").append("<option value='" + this.posstionInfoId + "'>" + this.posstionName + "</option>");
                })
                $("#sel_c").val(parseInt("@ViewBag.posstionInfoCIdOut"));
                PosstionDShow();
            }
        })
    }
    function PosstionDShow() {
        $.ajax({
            url: "http://localhost:50519/api/PosstionInfo/GetPosstionInfos",
            type: "get",
            dataType: "json",
            data: { pid: $("#sel_c").val() },
            success: function (d) {
                $("#sel_d").empty();
                $("#sel_d").append("<option value='-1'>==请选择区==</option>");
                $(d).each(function () {
                    $("#sel_d").append("<option value='" + this.posstionInfoId + "'>" + this.posstionName + "</option>");
                })
                $("#sel_d").val(parseInt("@ViewBag.posstionInfoDIdOut"));
            }
        })
    }
    function modifyPlace() {
        var obj = {
            addressInfoPeople: $("#user-name").val(),
            addressInfoPhone: $("#user-phone").val(),
            addressInfoId: parseInt("@ViewBag.addressInfoId "),
            posstionInfoPIdOut: $("#sel_p").val(),
            posstionInfoCIdOut: $("#sel_c").val(),
            posstionInfoDIdOut: $("#sel_d").val(),
            addressInfoName: $("#sel_p option:checked").text() + $("#sel_c option:checked").text() + $("#sel_d option:checked").text() + $("#user-intro").val(),
            addressInfoState: parseInt("@ViewBag.addressInfoState")
        };
       $.ajax({
           url: "http://localhost:50519/api/PersonalCenter/AddressInfoModify",
           dataType: "json",
           data: obj,
           type: "post",
           success: function (d) {
               if (d > 0) {
                   alert("保存成功!");
                   location.href = "/Personal/Place";
               }
           }
       })
    }
</script>