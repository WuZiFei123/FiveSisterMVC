    <script src="~/Content/js/script.js"></script>
</head>

<body>

    <!--顶部导航条 -->
    <div class="am-container header">
        <ul class="message-l">
            <div class="topMessage">
                <div class="menu-hd">
                    <a href="#" target="_top" class="h">亲，请登录</a>
                    <a href="#" target="_top">免费注册</a>
                </div>
            </div>
        </ul>
        <ul class="message-r">
            <div class="topMessage home">
                <div class="menu-hd"><a href="javascript:location.href='/ShowMasters/ShowMaster'" target="_top" class="h">商城首页</a></div>
            </div>
            <div class="topMessage my-shangcheng">
                <div class="menu-hd MyShangcheng"><a href="javascript:location.href='/Personal/SingePersonalCenter'" target="_top"><i class="am-icon-user am-icon-fw"></i>个人中心</a></div>
            </div>
            <div class="topMessage mini-cart">
                <div class="menu-hd"><a id="mc-menu-hd" href="javascript:location.href='/ShopCar/SingShopCar'" target="_top"><i class="am-icon-shopping-cart  am-icon-fw"></i><span>我的购物车</span><strong id="J_MiniCartNum" class="h">0</strong></a></div>
            </div>
            <div class="topMessage favorite">
                <div class="menu-hd"><a href="javascript:location.href='/ShowMasters/GoodsAddCollect'" target="_top"><i class="am-icon-heart am-icon-fw"></i><span>商品收藏</span></a></div>
            </div>
        </ul>
    </div>

    <!--悬浮搜索框-->

    <div class="nav white">
        <div class="logo"><img src="~/Content/images/logo.png" /></div>
        <div class="logoBig">
            <li><img src="~/Content/231.png" /></li>
        </div>

        <div class="search-bar pr">
            <a name="index_none_header_sysc" href="#"></a>
            <form>
                <input id="searchInput" value="@ViewBag.Name" name="index_none_header_sysc" type="text" placeholder="搜索" autocomplete="off">
                <input id="ai-topsearch" onclick="Serch()" class="submit am-btn" value="搜索" type="button">
            </form>
        </div>
    </div>

    <div class="clear"></div>
    <b class="line"></b>
    <div class="search">
        <div class="search-list">
            <div class="nav-table">
                <div class="long-title"><span class="all-goods">全部分类</span></div>
                <div class="nav-cont">
                    <ul>
                        <li class="index"><a onclick="Master()" href="#">首页</a></li>
                    </ul>
                </div>
            </div>
            <div class="am-g am-g-fixed">
                <div class="am-u-sm-12 am-u-md-12">
                    <div class="theme-popover">
                        <div class="searchAbout">
                        </div>
                        <ul class="select">
                            <p class="title font-normal">
                                <span class="total fl">搜索到<strong id="nums" class="num">@*@ViewBag.Num*@</strong>件相关商品</span>
                            </p>
                            <li class="select-list">
                                <dl id="select2">
                                </dl>
                            </li>
                        </ul>
                        <div class="clear"></div>
                    </div>
                    <div class="search-content">
                        <div class="sort">
                            <ul>
                                <li class="first"><a href="#">综合排序</a></li>
                                <li><a href="javascript:Order(1)">销量倒序</a></li>
                                <li><a href="javascript:Order(2)">销量正序</a></li>
                                <li><a href="javascript:Prices(1)">价格正序</a></li>
                                <li><a href="javascript:Prices(2)">价格倒序</a></li>
                            </ul>
                        </div>
                        <div class="clear"></div>

                        <ul id="ulls" class="am-avg-sm-2 am-avg-md-3 am-avg-lg-4 boxes">
                            @*@foreach (var item in ViewBag.list.GoodsInfos)
                            {
                                <li>
                                    <div class="i-pic limit">
                                        <img onclick='javascript:GoodsLook(@item.GoodsInfoId )' src="@item.GoodsInfoImage" />
                                        <p class="title fl">@item.GoodsInfoDesc</p>
                                        <p class="price fl">
                                            <b>¥</b>
                                            <strong>@item.GoodsInfoPrice</strong>
                                        </p>
                                        <p class="number fl">
                                            销量<span>@item.GoodsInfoCount</span>
                                        </p>
                                    </div>
                                </li>
                            }*@
                        </ul>
                    </div>
                    <div class="search-side">

                        <div class="side-title">
                        </div>
                    </div>
                    <div class="clear"></div>
                    <!--分页 -->
                    <ul class="am-pagination am-pagination-right">
                        <li><a href="javascript:First()">首页</a></li>
                        <li><a href="javascript:Up()">上一页</a></li>
                        <li><a href="javascript:Next()">下一页</a></li>
                        <li><a href="javascript:Last()">尾页</a></li>
                    </ul>
                </div>
            </div>
            <input type="hidden" value="@ViewBag.Flag" id="hid" />
</body>
</html>
<script>
        var PageIndex = 1;
        var PageSize = 12;
        var Count = 0;
        var Brand = "";
        var Jb = 0;
        var Types = "";
        var Orderby = 0;
        var AllPage =0;
        var Name = "";
        var Price = 0;
        function Serch() {
            PageIndex = 1;
            Name = $("#searchInput").val();
            Types = "";
            ShowGoodsPage();
        }
        function Next() {
            if (PageIndex == AllPage) {
                layer.open({
                    content: '已经是最后一页了!',
                    anim: 6,
                    isOutAnim: true,
                    success: function (layero, index) {

                    }
                });
                return;
            }
            PageIndex++;
            ShowGoodsPage();
        }
        function First() {
            PageIndex = 1;
            ShowGoodsPage();
        }
        function Last() {
            PageIndex = AllPage;
            ShowGoodsPage();
        }
        function Up() {
            if (PageIndex == 1) {
                layer.open({
                    content: '已经是第一页了!',
                    anim: 6,
                    isOutAnim: true,
                    success: function (layero, index) {

                    }
                });
                return;
            }
            PageIndex--;
            ShowGoodsPage();
        }
    $(function () {
        var Flag = $("#hid").val();
        if (Flag == 1) {
            Name = $("#searchInput").val();
        }
        if (Flag == 2) {
            Types = $("#searchInput").val();
        }
            ShowGoodsPage();
        })
        function ShowGoodsPage() {
            $.ajax({
                url: "http://localhost:50519/api/GoodsInfo/GetGoodsInfosPage",
                dataType: "json",
                type: "get",
                data: { PageIndex: PageIndex, Name: Name, Types: Types, Orderby: Orderby, Price: Price },
                contentType: "application/x-www-form-urlencoded",
                success: function (d) {
                    Count = d.count;
                    $("#nums").text(d.con);
                    AllPage = Math.ceil(Count * 1.0 / PageSize);
                    $("#ulls").empty();
                    $(d.goodsInfos).each(function () {
                        var html = "<li>" +
                            "<div class='i-pic limit'>" +
                            "<img  onclick='GoodsLook(" + this.goodsInfoId + ")' style='width:218px; height:260px;' src='" + this.goodsInfoImage + "'/>" +
                            "<p class='title fl'>" + this.goodsInfoDesc + "</p>" +
                            "<p class='price fl'>" +
                            "<b>¥</b><strong>" + this.goodsInfoPrice + "</strong>" +
                            "</p><p class='number fl'>销量<span>" + this.goodsInfoCount + "</span>" +
                            "</p></div></li>";
                        $("#ulls").append(html);
                    })
                    //商品级别
                    Jb = d.goodsInfos[0].goodsJb;
                },
                        complete: function () {
                            $.ajax({
                                url: "http://localhost:50519/api/ClothesType/GetClothesTypesById?Id=" + Jb,
                                dataType: "json",
                                type: "get",
                                contentType: "application/x-www-form-urlencoded",
                                success: function (d) {
                                    $("#select2").empty();
                                    $("#select2").append("<dd class='select-all selected'><a href=''>类型</a></dd>");
                                    $(d).each(function () {
                                        var html = "<dd><a  onclick='SerchType(" + this.clothesTypeId + ")'>" + this.clothesTypeName + "</a></dd >";
                                        $("#select2").append(html);
                                    })
                                }
                            });
                        }
                    });
                }
    function SerchType(TypeId) {
        Name = $("#searchInput").val(); 
        $.ajax({
            url: "http://localhost:50519/api/ClothesType/GetClothesTypesByMasterId?TypeId=" + TypeId,
            dataType: "json",
            type: "get",
            contentType: "application/x-www-form-urlencoded",
            success: function (d) {
                PageIndex = 1;
                Types = d.clothesTypeName;
                ShowGoodsPage();
            }
        });
    }
        function SerchTwo(BrandId) {
            $.ajax({
                url: "http://localhost:50519/api/FiveSister/GetClothesBrands?Id=" + BrandId,
                dataType: "json",
                type: "get",
                contentType: "application/x-www-form-urlencoded",
                success: function (d) {
                    PageIndex = 1;
                    Brand = d[0].clothesBrandName;
                    ShowGoodsPage();
                }
            });

        }
        function GoodsLook(GoodsId) {
            location.href = "/ShowMasters/GoodsLook?GoodsId=" + GoodsId;
        }
        function Master() {
            location.href = "/ShowMasters/ShowMaster";
    }
    function Order(o) {
        Orderby = o;
        ShowGoodsPage();
    }
    function Prices(p) {
        Price = p;
        ShowGoodsPage();
    }
    </script>