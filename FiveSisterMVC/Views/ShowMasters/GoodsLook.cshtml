                contentType: "application/x-www-form-urlencoded",
                success: function (d) {
                    $("#Color").empty();
                    $(d).each(function () {
                        $("#Color").append("<div class='lii'><li><input type='radio' class='color' value='" + this.goodsColor + "' name='color'/><span class='sps'>" + this.goodsColor + "</span><i></i></li></div>");
                    })
                    GetGoodsLookSize();
                }
            });
        }
