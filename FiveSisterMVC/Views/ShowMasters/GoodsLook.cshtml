        //显示
        function GetGoodsInfos() {
            $.ajax({
                url: "http://localhost:50519/api/GoodsInfo/GetGoodsInfos?id="+@ViewBag.GoodsId,
                type: "get",
                dataType: "json",
                contentType: "application/x-www-form-urlencoded",
                success: function (d) {
                    console.log(d);
                    $(d).each(function () {
                        $("#ImgBig").empty();
                        $("#ImgBig").append("<td><img style='width:397px;height:437px'  src='" + this.goodsInfoImage + "' /></td>");
                        $("#name").empty();
                        $("#name").append("<h1>" + this.goodsInfoName + "  " + this.goodsInfoDesc + "</h1 >");
                        $("#pricec").empty();
                        $("#pricec").append("" + this.goodsInfoPrice + "");
                        pric = this.goodsInfoPrice;
                        $("#pricey").empty();
                        $("#pricey").append("" + this.goodsInfoPrice * 1.5 + "");
                        $("#J_AttrUL").empty();
                        $("#J_AttrUL").append("<li title=''>商品类型:&nbsp;" + this.goodsTypes + "</li>" +
                            "<li title=''>商品产地:&nbsp;" + this.goodsInfoPlace + "</li>" +
                            "<li title=''>商品可选颜色:&nbsp;" + this.goodsInfoColor + "</li>" +
                            "<li title=''>商品可选规格:&nbsp;" + this.goodsInfoSize + "</li>" +
                            "<li title=''>商品简介:&nbsp;" + this.goodsInfoDesc + "</li>");
                       
                        $("#sales").empty();
                        $("#sales").append("" + this.goodsInfoCount + "");
                    })
                    GetGoodsLookColor();
                }
            });
        }
        //获取商品详情图片
        function GetGoodsLookColor() {
            $.ajax({
                url: "http://localhost:50519/api/GoodsInfo/GetGoodsLooksColor?id="+@ViewBag.GoodsId,
                type: "get",
