                    })
                    GetGoodsLookSize();
                }
            });
        }
        //联查尺码
        function GetGoodsLookSize() {
            $.ajax({
                url: "http://localhost:50519/api/GoodsInfo/GetGoodsLooksSize?id="+@ViewBag.GoodsId,
                type: "get",
                dataType: "json",
                contentType: "application/x-www-form-urlencoded",
                success: function (d) {
                    $("#Size").empty();
                    $(d).each(function () {
                        $("#Size").append("<div class='lii'><li><input type='radio' class='size' value='" + this.goodsSize + "'  name='size'  />" + this.goodsSize + "<i></i></li></div>");
                    })
                }
            });
        }
        //购买加入订单没有问题
        function OnBuy() {
            var color = $(".color:checked").val();
            var size = $(".size:checked").val();
            var num = $("#text_box").val();
            var goodsLookId;//具体商品主键
            $.ajax({
                url: "http://localhost:50519/api/GoodsInfo/GetGoodsLooksKC",
                type: "get",
                dataType: "json",
                data: { id: 10, color: color, size: size },//Id是显示商品主键
                contentType: "application/x-www-form-urlencoded",
                success: function (d) {
                    if (d == "") {
                        alert('请先选择商品样式尺码');
                        return;
                    }
                    $(d).each(function () {
                        goodsLookId = this.goodsLookId;
                    })
                    var ord = {};
                    ord.GoodsLookIdOut = goodsLookId;
                    ord.UserInfoIdOut = 2;//用户主键写死
                    ord.OrderInfoSumPrice = pric * num;
                    ord.OrderInfoNumber = num;
                    $.ajax({
                        url: "http://localhost:50519/api/MyOrderInfo/AddOrderInfo",
                        type: "post",
                        dataType: "json",
                        data: ord,
                        contentType: "application/x-www-form-urlencoded",
                        success: function (d) {
                            if (d > 0) {
                                alert(d);
                            }
                            else {
                                alert("添加失败");
                                return;
                            }
                        }
                    })
                }
            });
        }
        //加入购物车
        function AddCar() {
            var color = $(".color:checked").val();
            var size = $(".size:checked").val();
            var num = $("#text_box").val();
            var g;//具体商品主键
            $.ajax({
                url: "http://localhost:50519/api/GoodsInfo/GetGoodsLooksKC",
                type: "get",
                dataType: "json",
                data: { id:@ViewBag.GoodsId, color: color, size: size },
                contentType: "application/x-www-form-urlencoded",
                success: function (d) {
                    $(d).each(function () {
                        g = this.goodsLookId;
                        alert(g);
                    })
                    var goodsCar = {};
                    goodsCar.GoodsLookIdOut = g;
                    goodsCar.UserInfoIdOut = 2;
                    goodsCar.GoodsNumber = num;
                    $.ajax({
                        url: "http://localhost:50519/api/GoodsCarInfos/AddGoodsCarInfos",
                        type: "post",
                        dataType: "json",
                        data: goodsCar,
                        contentType: "application/x-www-form-urlencoded",
