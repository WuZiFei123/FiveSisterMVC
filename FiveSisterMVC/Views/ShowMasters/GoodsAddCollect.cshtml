<script>
    function ShowClect() {
        var id = 1;
        $.ajax({
            url: "http://localhost:50519/api/GoodsAdd/GetGoodsAddInfos?UserId=" + id,
            dataType: "json",
            type: "get",
            contentType: "application/x-www-form-urlencoded",
            success: function (d) {
                $("#clectsaasas").empty();
                $(d).each(function () {
                    var html = "<div class='s-item-wrap'>" +
                        "<div class='s-item'>" +
                        "<div class='s-pic'>" +
                        "<a href='#' class='s-pic-link'>" +
                        "<img src='" + this.goodsInfoImage + "' alt='' title='' class='s-pic-imgs-guess-item-img'>" +
                        "</a>"+
                        "</div>"+
                        "<div class='s-info'>"+
                        "<div class='s-title'><a href='#' title=''></a></div>" +
                        "<div class='s-price-box'>" +
                        "<span class='s-price'><em class='s-price-sign'>¥</em><em class='s-value'>" + this.goodsInfoPrice + "</em></span>" +
                        "<span class='s-history-price'><em class='s-price-sign'></em><em class='s-value'></em></span>" +
                        "</div>" +
                        "<div class='s-extra-box'>" +
                        "<span class='s-comment'>好评: 98.03%</span>" +
                        "<span class='s-sales'>月销: 219</span>" +
                        "</div>" +
                        "</div>" +
                        "<div class='s-tp'>" +
                        "<span onclick='Quxiao(" + this.goodsAddInfoId + ")' class='ui-btn-loading-before'>取消收藏</span>" +
                        "<i class='am-icon-shopping-cart'></i>" +
                        "<span class='ui-btn-loading-before buy'>加入购物车</span><p>" +
                        "<a href='' class='c-nodo J_delFav_btn'>取消收藏</a>" +
                        "</p></div></div>" +
                        "</div >";
                    $("#clectsaasas").append(html);
                })
            }
        });
    }
    $(function () {
        ShowClect();
    })
    function Quxiao(ClectId) {
        $.ajax({
            url: "http://localhost:50519/api/GoodsAdd/UpdateGoodsClect?ClectId=" + ClectId,
            dataType:"json",
            type:"get",
            contentType:"application/x-www-form-urlencoded",
            success:function(d){
                if (d > 0) {
                    layer.msg('取消成功!', { time:1000 }); 
                    setTimeout(function () {
                        ShowClect();
                    }, 1000); 
                }
            }
        })
    }
</script>
